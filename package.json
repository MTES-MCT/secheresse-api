{
  "name": "secheresse-api",
  "version": "0.0.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "lint": "xo",
    "download-datasets": "node scripts/download-datasets.js",
    "prepare-data": "node scripts/prepare-data/index.js",
    "scalingo-postbuild": "yarn download-datasets && yarn prepare-data"
  },
  "dependencies": {
    "@etalab/decoupage-administratif": "^3.0.0",
    "@maplibre/maplibre-gl-native": "^5.2.0",
    "@turf/bbox": "^6.5.0",
    "@turf/boolean-point-in-polygon": "^6.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "flatbush": "^4.1.0",
    "gdal-async": "^3.6.4",
    "got": "^12.6.0",
    "hash-obj": "^4.0.0",
    "http-errors": "^2.0.0",
    "lodash-es": "^4.17.21",
    "morgan": "^1.10.0",
    "papaparse": "^5.4.1",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "xo": "^0.54.2"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "import/no-unassigned-import": "off",
      "import/order": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "engines": {
    "node": ">= 18.12"
  }
}
